<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Country</th>
      <th>lat</th>
      <th>lon</th>
      <th>Aqius</th>
      <th>mainus</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= "Last Updated: " + @last_update.to_s %>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.state %></td>
        <td><%= city.country %></td>
        <td><%= city.lat %></td>
        <td><%= city.lon %></td>
        <td><%= city.aqius %></td>
        <td><%= city.mainus %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

